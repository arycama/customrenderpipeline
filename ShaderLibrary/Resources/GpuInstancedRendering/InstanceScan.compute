#pragma kernel Scan

RWBuffer<uint> _MemoryCounter, _DrawCallArgs;
Buffer<uint> _RendererCounts;
Buffer<uint2> _SubmeshOffsetLengths;
uint _Count;

// Determines the final destination of each renderer ID. 
// One thread ID per renderer "type"
[numthreads(64, 1, 1)]
void Scan(uint id : SV_DispatchThreadID)
{
	if (id >= _Count)
		return;
	
	_DrawCallArgs[1] = _RendererCounts[id];
}
